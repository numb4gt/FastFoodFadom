<Application x:Class="FastFoodFadom.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FastFoodFadom"
             StartupUri="Views\Windows\StartWindow.xaml"
             xmlns:AdminWn="Views\Windows\AdminWindow.xaml"
             xmlns:LoginWn="Views\Windows\LoginWindow.xaml"
             xmlns:MainWn="Views\Windows\MainWindow.xaml"
             xmlns:View="clr-namespace:FastFoodFadom.Views"
             xmlns:ViewModel="clr-namespace:FastFoodFadom.ViewModels">
    
    <Application.Resources>

        <ResourceDictionary>
            
            <DataTemplate DataType="{x:Type ViewModel:MainMenuPageVievModel}">
                <View:MainMenuPage/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type ViewModel:MainInfoPageViewModel}">
                <View:MainInfo/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type ViewModel:AdminOrdersPageViewModel}">
                <View:AdminOrdersPage/>
            </DataTemplate>
        
            <DataTemplate DataType="{x:Type ViewModel:CustomerOrderPageViewModel}">
                <View:CustomerOrderPage/>
            </DataTemplate>

            
        </ResourceDictionary>







    </Application.Resources>
</Application>
